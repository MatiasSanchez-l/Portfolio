---
import Layout from "../../layouts/Layout.astro";
import { Profile } from "@/components/common/profile/Profile";
import { Timeline } from "@/components/common/timeline/Timeline";
---

<Layout>
    <!-- Home Section -->
    <section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-muted">
        <Profile currentLang="en" client:visible/>
    </section>


    <!-- Experience Section -->
    <section id="experience" class="min-h-screen flex items-center justify-center bg-muted">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Experience</h2>
            <Timeline currentLang="en" client:visible/>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="min-h-screen flex items-center justify-center bg-background">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Projects</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-muted p-6 rounded-lg shadow">
                    <h3 class="text-xl font-semibold mb-2">Portfolio Website</h3>
                    <p class="text-muted-foreground mb-4">A modern portfolio built with Astro, React, and Tailwind CSS.</p>
                    <div class="flex gap-2">
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Astro</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">React</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Tailwind</span>
                    </div>
                </div>
                <div class="bg-muted p-6 rounded-lg shadow">
                    <h3 class="text-xl font-semibold mb-2">E-commerce Platform</h3>
                    <p class="text-muted-foreground mb-4">Full-stack e-commerce solution with payment integration.</p>
                    <div class="flex gap-2">
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">React</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Node.js</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">MongoDB</span>
                    </div>
                </div>
                <div class="bg-muted p-6 rounded-lg shadow">
                    <h3 class="text-xl font-semibold mb-2">Task Management App</h3>
                    <p class="text-muted-foreground mb-4">Collaborative task management with real-time updates.</p>
                    <div class="flex gap-2">
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Vue.js</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Express</span>
                        <span class="bg-primary text-primary-foreground px-2 py-1 rounded text-sm">Socket.io</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="min-h-screen flex items-center justify-center bg-muted">
        <div class="max-w-2xl mx-auto px-4 text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-8">Get In Touch</h2>
            <p class="text-lg text-muted-foreground mb-8">
                I'm always interested in new opportunities and exciting projects.
                Let's connect and build something amazing together!
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="mailto:matias@example.com" class="bg-primary text-primary-foreground px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors">
                    Send Email
                </a>
                <a href="https://linkedin.com/in/matiassanchez" class="bg-secondary text-secondary-foreground px-6 py-3 rounded-lg hover:bg-secondary/90 transition-colors">
                    LinkedIn
                </a>
            </div>
        </div>
    </section>
</Layout>
