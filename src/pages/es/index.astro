---
import Layout from "../../layouts/Layout.astro";
import { Profile } from "@/components/common/profile/Profile";
import { Timeline } from "@/components/common/timeline/Timeline";
import { Projects } from "@/components/common/projects/Projects";
import { Education } from "@/components/common/education/Education";
---

<Layout>
<script>
  // Add reveal animations to section titles
  document.addEventListener('DOMContentLoaded', () => {
    const sectionTitles = document.querySelectorAll<HTMLElement>('section h2');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('reveal-visible');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    sectionTitles.forEach((title) => {
      title.style.opacity = '0';
      title.style.transform = 'translateY(30px)';
      title.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
      observer.observe(title);
    });
  });
</script>
    <!-- Profile Section -->
    <section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-muted">
        <Profile currentLang="es" client:visible/>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="min-h-screen flex items-center justify-center bg-muted py-16">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Experiencia</h2>
            <Timeline currentLang="es" client:visible/>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 flex items-center justify-center bg-background">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Proyectos</h2>
            <Projects currentLang="es" client:visible/>
        </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="py-20 flex items-center justify-center bg-muted">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Educaci√≥n</h2>
            <Education currentLang="es" client:visible/>
        </div>
    </section>
</Layout>
