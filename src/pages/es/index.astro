---
import Layout from "../../layouts/Layout.astro";
import { Profile } from "@/components/common/profile/Profile";
import { Timeline } from "@/components/common/timeline/Timeline";
import { Projects } from "@/components/common/projects/Projects";
import { Education } from "@/components/common/education/Education";
---

<Layout>
    <!-- Home Section -->
    <section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-muted">
        <Profile currentLang="es" client:visible/>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="min-h-screen flex items-center justify-center bg-muted">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Experiencia</h2>
            <Timeline currentLang="es" client:visible/>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="min-h-screen flex items-center justify-center bg-background">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Proyectos</h2>
            <Projects currentLang="es" client:visible/>
        </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="min-h-screen flex items-center justify-center bg-muted">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Educaci√≥n</h2>
            <Education currentLang="es" client:visible/>
        </div>
    </section>
    
</Layout>
